    </div>
  </section>

  <section class="reviews">
    <div class="container">
      <div class="intro">
        <span class="upperTitle">O que dizem sobre nós</span>
        <h2 class="title-2">Nossos Clientes</h2>
        <span class="bigText">Avaliações</span>
      </div>


      <div class="glide">
        <div data-glide-el="track" class="glide__track">
          <ul class="glide__slides">

            <li class="glide__slide">
              <div class="slide">
                <img src="/assets/quotes.svg" alt="" class="quotes">
                <div class="header">
                  <img src="/assets/user-avatar.jpg" alt="" class="userAvatar">
                  <span class="userName">John Doe</span>
                </div>
                <p class="text userReview">Lorem ipsum dolor sit amet, consectetuer adipiscing elit. Aenean commodo
                  ligula eget dolor. Aenean massa. Cum sociis natoque penatibus et magnis</p>
              </div>
            </li>


            <li class="glide__slide">
              <div class="slide">
