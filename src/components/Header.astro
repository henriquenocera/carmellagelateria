<header class="header">
  <div class="container">
    <a href="/"><img src="/assets/logo-carmella.svg" alt="Logo Carmella Gelateria" /></a>
    <nav class="nav">
      <a href="/">Início</a>
      <a href="#" class="menuServico">Sobre Nós</a>
      <a href="#">Seja um Licenciado</a>
      <a href="#">Nossas Lojas</a>
      <a href="#" class="contato">Orçamento</a>
    </nav>
    <a href="#"><button>Área do Licenciado</button></a>
    <div class="hamburgerContainer">
      <svg class="ham hamRotate ham8 hamburger" viewBox="0 0 100 100" width="80">
        <path class="line top"
          d="m 30,33 h 40 c 3.722839,0 7.5,3.126468 7.5,8.578427 0,5.451959 -2.727029,8.421573 -7.5,8.421573 h -20" />
        <path class="line middle" d="m 30,50 h 40" />
        <path class="line bottom"
          d="m 70,67 h -40 c 0,0 -7.5,-0.802118 -7.5,-8.365747 0,-7.563629 7.5,-8.634253 7.5,-8.634253 h 20" />
      </svg>
    </div>
</header>

<style lang="scss">
  @use "../styles/global/variables"as *;


  .header {
    width: 100%;
    height: 10vh;
    display: flex;
    background: $black;
    background: transparent;
    z-index: 2;

    .container {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    button {
      font-size: 1.6rem;
      font-weight: 600;
      color: $white;
      background-color: $mainColor;
      padding: 10px 15px;
      cursor: pointer;
    }

    .imageContainer {
      width: 200px;
      height: 24px;
    }

    .nav {
      display: flex;

      a {
        color: $black;
        font-size: 1.6rem;
        padding: 22px 16px;
        cursor: pointer;

        &:hover,
        &:focus-visible,
        &:focus-within {
          color: $mainColor;
        }

        &:last-child:hover {
          color: $white;
        }
      }



      .contato {
        display: none;
      }
    }

    .hamburgerContainer {
      display: none;

      .hamburger {
        display: none;
      }
    }
  }

  @media (max-width: 1092px) {
    .header {
      img {
        width: 160px;
      }

      button {
        font-size: 1.4rem;
      }

      .nav {
        a {
          font-size: 1.4rem;
        }
      }
    }
  }

  @media (max-width: 868px) {
    .header {
      button {
        display: none;
      }

      .nav {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        width: 100%;
        margin-bottom: 2rem;
        transform: translateX(-100%);
        background: $white;
        background: #FCF9EF;
        z-index: 1;
        height: 100vh;
        max-height: 100%;
        position: fixed;
        overflow-y: auto;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        transition: 300ms ease-in-out;

        &.active {
          transform: translateX(0);
          transition: 300ms ease-in-out;
        }

        a {
          font-size: 2.2rem;
        }

        .contato {
          display: block;
          font-size: 2.2rem;
          font-weight: 600;
          color: $white;
          background-color: $mainColor;
          padding: 10px 15px;
          border-radius: 6px;
          cursor: pointer;
          margin-top: 25px;
        }



      }

      .hamburgerContainer {
        display: block;
        z-index: 1;

        .hamburger {
          display: block;
        }

        .ham {
          cursor: pointer;
          -webkit-tap-highlight-color: transparent;
          transition: transform 400ms;
          -moz-user-select: none;
          -webkit-user-select: none;
          -ms-user-select: none;
          user-select: none;
        }

        .hamRotate.active {
          transform: rotate(45deg);
        }

        .hamRotate180.active {
          transform: rotate(180deg);
        }

        .line {
          fill: none;
          transition: stroke-dasharray 400ms, stroke-dashoffset 400ms;
          stroke: black;
          stroke-width: 5.5;
          stroke-linecap: round;
        }

        .ham8 .top {
          stroke-dasharray: 40 160;
        }

        .ham8 .middle {
          stroke-dasharray: 40 142;
          transform-origin: 50%;
          transition: transform 400ms;
        }

        .ham8 .bottom {
          stroke-dasharray: 40 85;
          transform-origin: 50%;
          transition: transform 400ms, stroke-dashoffset 400ms;
        }

        .ham8.active .top {
          stroke-dashoffset: -64px;
        }

        .ham8.active .middle {
          //stroke-dashoffset: -20px;
          transform: rotate(90deg);
        }

        .ham8.active .bottom {
          stroke-dashoffset: -64px;
        }
      }
    }
  }
</style>

<script>

  const hamburger = document.querySelector('.hamburger')

  hamburger.addEventListener('click', toggleMenu);

  function toggleMenu(event) {
    const nav = document.querySelector('.nav')
    nav.classList.toggle('active');
    hamburger.classList.toggle('active')
  }

</script>